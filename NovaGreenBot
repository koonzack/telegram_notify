function sendTelegramMessage() {
  // กำหนดข้อมูลของ Bot
  const botToken = '7626861301:AAH8vLmL6oMn-dmnYuEm43F-S2Ibvb3LlVE';  // ใส่ Token ของ Bot
  const chatId = '-4552215528';      // ใส่ Chat ID ของกลุ่มหรือผู้ใช้
  const message = 'test_1'; // ข้อความที่ต้องการส่ง

  // สร้าง URL สำหรับ API ของ Telegram
  const url = `https://api.telegram.org/bot${botToken}/sendMessage?chat_id=${chatId}&text=${encodeURIComponent(message)}`;

  // ส่งคำขอไปยัง Telegram โดยใช้ UrlFetchApp
  const response = UrlFetchApp.fetch(url);
  const result = JSON.parse(response.getContentText());

  if (result.ok) {
    Logger.log("ส่งข้อความสำเร็จ");
  } else {
    Logger.log("ส่งข้อความไม่สำเร็จ: " + result.description);
  }
}
